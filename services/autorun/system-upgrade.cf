bundle agent system_upgrade
{
  meta:
      "tags" slist => { "autorun" };

  commands:
    ubuntu.ubuntu_upgrade::
      "/usr/bin/apt-get"
	args =>"update",
	unless => "apt_get_upgrade_disabled";

      "/usr/bin/apt-get"
	args =>"upgrade",
	unless => "apt_get_upgrade_disabled";
}
