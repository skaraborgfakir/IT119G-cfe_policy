bundle agent system_upgrade
{
  meta:
      "tags" slist => { "autorun" };

  commands:
    ubuntu::
      "/usr/bin/apt-get"
	args =>"update",
	unless => "apt_get_upgrade_disabled";

      "/usr/bin/apt-get"
	args =>"upgrade",
	unless => "apt_get_upgrade_disabled";

    redhat::
      "/usr/bin/yum"
	args =>"check-update",
	unless => "yum_check_update_disabled";

      "/usr/bin/yum"
	args =>"upgrade",
	unless => "yum_upgrade_disabled";
}

